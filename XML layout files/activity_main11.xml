<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11">



    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="47dp"
        android:background="#000"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="94dp">

        <ImageView
            android:id="@+id/kishire"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/lema" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Internet Of Things (IOT)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <ImageView
            android:id="@+id/kishore"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/downloadabcd" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="It is defined as the network of physical objects – devices, vehicles, buildings and other items – embedded with sensors, electronics, software and network connectivity that enables these objects to get the ability to sense and communicate."
            android:textColor="#fff"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="IoT devices can be used to enable remote health monitoring and emergency notification systems. These health monitoring devices can range from blood pressure and heart rate monitors to advanced devices capable of monitoring specialized implants, such as pacemakers, Fitbit electronic wristbands, or advanced hearing aids. Some hospitals have begun implementing smart beds that can detect when they are occupied and when a patient is attempting to get up. It can also adjust itself to ensure appropriate pressure and support is applied to the patient without the manual interaction of nurses"
            android:textColor="#fff"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/iottexttut"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Text Tutorial"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first1"
            android:layout_width="328dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">

            <VideoView
                android:id="@+id/vdVw1"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="The application of the IOT in healthcare plays a fundamental role in managing chronic diseases and in disease prevention and control. Remote monitoring is made possible through the connection of powerful wireless solutions. The connectivity enables health practitioners to capture patient’s data and applying complex algorithms in health data analysis.[54]"
            android:textColor="#fff"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/iotvideo"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Video Tutorial"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="For More Queries Please Press The Button"
            android:textColor="#fff"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/iotqueries"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Query"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Please Submit The Media Of The Completed Projects"
            android:textColor="#fff"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/iotsubmit"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Submit"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />






    </LinearLayout>

</ScrollView>