<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="47dp"
        android:background="#000"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="94dp">

        <ImageView
        android:id="@+id/kishire"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/lema" />

        <ViewFlipper
            android:id="@+id/viewflipper1"
            android:layout_width="417dp"
            android:layout_height="213dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28"></ViewFlipper>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Lema Labs @ IIT Madras Research Park"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Lema Labs is a company founded by IIT Alumni under the guidance of faculty members of IIT Madras.We are striving to build an ecosystem for emerging technologies by providing support to stakeholders which include student community, educational institutions and the industry. "
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="10dp"
            android:text="Internet Of Things"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first"
            android:layout_width="328dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="150dp">

            <VideoView
                android:id="@+id/vdVw"
                android:layout_width="328dp"
                android:layout_height="200dp"

                android:layout_alignParentTop="true"
                android:layout_gravity="center"

                android:layout_marginTop="0dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="It is defined as the network of physical objects – devices, vehicles, buildings and other items – embedded with sensors, electronics, software and network connectivity that enables these objects to get the ability to sense and communicate."
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />
        <Button
            android:id="@+id/iotbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/transparent"
            android:text="View More"
            android:textColor="#2471A3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Learning"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first1"
            android:layout_width="328dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="10dp">

            <VideoView
                android:id="@+id/vdVw1"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Machine learning is the science of getting computers to act without being explicitly programmed. In the past decade, machine learning has given us self-driving cars, practical speech recognition, effective web search, and a vastly improved understanding of the human genome."
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/mlbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/transparent"
            android:text="View More"
            android:textColor="#2471A3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaizen Robatic"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <RelativeLayout
            android:id="@+id/first2"
            android:layout_width="328dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="10dp">

            <VideoView
                android:id="@+id/vdVw2"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Kaizen Robotics Program is a certificate program which serves as a
platform for tech enthusiasts to get started in Robotics and
Embedded Systems. Trained over 4500+ participants so far.This
program has been rated a 4.5 out of 5 by the participants."
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/robobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/transparent"
            android:text="View More"
            android:textColor="#2471A3" />

        <View
            android:id="@+id/viEW"
            android:layout_width="262dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#ffff "
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.09" />


        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="33dp">
            <ImageView
                android:id="@+id/twitterbtn"
                android:layout_width="30dp"
                android:layout_height="31dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/download" />

            <ImageView
                android:id="@+id/facebookbtn"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/facebook" />

        </RelativeLayout>


    </LinearLayout>


</ScrollView>
