<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity12">



    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="47dp"
        android:background="#000"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="94dp">

        <ImageView
            android:id="@+id/kishire"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/lema" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Kaizen Robotics Program"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <ImageView
            android:id="@+id/kishore"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/downloadrobo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Kaizen Technology Program is exclusively for school students from Class 7 to 12 which aims at teaching from basics of Electronics Programming to latest emerging technologies with a very strong and fun hands-on experience by building Robots. "
            android:textColor="#fff"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Robotics is an interdisciplinary branch of engineering and science that includes mechanical engineering, electronic engineering, information engineering, computer science, and others. Robotics deals with the design, construction, operation, and use of robots, as well as computer systems for their control, sensory feedback, and information processing."
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/robotexttut"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Text Tutorial"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/first1"
            android:layout_width="328dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">

            <VideoView
                android:id="@+id/vdVw1"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="These technologies are used to develop machines that can substitute for humans and replicate human actions. Robots can be used in many situations and for lots of purposes, but today many are used in dangerous environments (including bomb detection and deactivation), manufacturing processes, or where humans cannot survive (e.g. in space)"
            android:textColor="#fff"
            android:textSize="16sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/robovideo"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Video Tutorial"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="For More Queries Please Press The Button"
            android:textColor="#fff"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/roboqueries"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Query"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Please Submit The Media Of The Completed Projects"
            android:textColor="#fff"
            android:textSize="16sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/robosubmit"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Submit"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />






    </LinearLayout>

</ScrollView>